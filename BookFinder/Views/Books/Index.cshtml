@{
  Layout = "Navbar";
  ViewData["Title"] = "Books";
}

@{
  var books = ViewBag.Books as IEnumerable<dynamic>;
}

<style>
  .page-title {
    font-size: 34px;
    font-weight: 900;
    margin-bottom: 32px;
    color: #f97316;
  }

  .books-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 24px;
  }

  .book-item {
    background: #020617;
    border-radius: 20px;
    padding: 22px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 12px 42px rgba(0, 0, 0, 0.55);
    transition: transform 0.25s ease, border-color 0.25s ease;
  }

  .book-item:hover {
    transform: translateY(-6px);
    border-color: rgba(249, 115, 22, 0.45);
  }

  .book-title {
    font-size: 18px;
    font-weight: 800;
    margin-bottom: 8px;
  }

  .book-title a {
    color: #f9fafb;
    text-decoration: none;
  }

  .book-title a:hover {
    color: #fdba74;
  }

  .book-meta {
    font-size: 14px;
    color: #9ca3af;
    line-height: 1.6;
    margin-bottom: 14px;
  }

  .book-meta a {
    color: #f97316;
    text-decoration: none;
    font-weight: 600;
  }

  .book-meta a:hover {
    text-decoration: underline;
  }

  .book-score {
    font-size: 14px;
    font-weight: 700;
    color: #fbbf24;
  }

  .no-data {
    color: #9ca3af;
    font-style: italic;
  }
</style>

<h1 class="page-title">üìö All Books</h1>

@if (books != null && books.Any())
{
  <div class="books-list">
    @foreach (var book in books)
    {
      <div class="book-item">
        <div class="book-title">
          <a href="/Books/Details/@book.bookId">
            @book.title
          </a>
        </div>

        <div class="book-meta">
          Author:
          <a href="/author/@book.authorId">@book.author</a>
          <br />
          Publisher:
          <a href="/publisher/@book.publisherId">@book.publisher</a>
        </div>

        <div class="book-score">
          ‚≠ê Score: 0 <span style="color:#9ca3af">(No reviews yet)</span>
        </div>
      </div>
    }
  </div>
}
else
{
  <p class="no-data">No books found.</p>
}