@using System.Security.Claims
@{
  Layout = "Navbar";
  ViewData["Title"] = "Book Details";

  var book = ViewBag.Book;
  var reviews = ViewBag.Reviews as IEnumerable<dynamic>;
  var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
  var userId = User?.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

<style>
  .book-header {
    margin-bottom: 40px;
  }

  .book-header h1 {
    font-size: 38px;
    font-weight: 900;
    color: #f97316;
  }

  .book-meta {
    font-size: 16px;
    color: #9ca3af;
    margin-top: 8px;
  }

  .book-meta a {
    color: #f97316;
    text-decoration: none;
    font-weight: 600;
  }

  .score-box {
    margin-top: 12px;
    font-size: 15px;
    font-weight: 700;
    color: #fbbf24;
  }

  /* REVIEWS */
  .reviews-section {
    margin-top: 60px;
  }

  .review-card {
    background: #020617;
    border-radius: 18px;
    padding: 22px;
    margin-bottom: 22px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .review-author {
    font-weight: 700;
    color: #fdba74;
    margin-bottom: 8px;
  }

  .review-content {
    color: #e5e7eb;
    margin-bottom: 10px;
  }

  .spoiler {
    color: #ef4444;
    font-size: 13px;
    font-weight: 600;
  }

  .comment {
    margin-left: 26px;
    margin-top: 12px;
    padding-left: 14px;
    border-left: 2px solid rgba(249, 115, 22, 0.4);
    color: #d1d5db;
  }

  .comment small {
    color: #9ca3af;
  }

  /* FORMS */
  .form-box {
    margin-top: 26px;
    background: #020617;
    padding: 22px;
    border-radius: 18px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  textarea {
    width: 100%;
    min-height: 90px;
    background: #020617;
    color: #f9fafb;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    padding: 12px;
  }

  textarea:focus {
    outline: none;
    border-color: #f97316;
  }

  .btn {
    margin-top: 12px;
    padding: 10px 18px;
    border-radius: 999px;
    border: none;
    background: linear-gradient(135deg, #f97316, #ea580c);
    color: white;
    font-weight: 700;
    cursor: pointer;
  }

  .btn.danger {
    background: transparent;
    border: 1px solid #ef4444;
    color: #fca5a5;
    margin-left: 10px;
  }

  .login-warning {
    margin-top: 20px;
    color: #9ca3af;
    font-style: italic;
  }
</style>

<!-- BOOK INFO -->
<section class="book-header">
  <h1>@book.title</h1>

  <div class="book-meta">
    Author:
    <a href="/author/@book.authorId">@book.author</a> |
    Publisher:
    <a href="/publisher/@book.publisherId">@book.publisher</a>
  </div>

  <div class="score-box">
    ‚≠ê Score: 0 <span style="color:#9ca3af">(No reviews yet)</span>
  </div>
</section>

<!-- REVIEWS -->
<section class="reviews-section">
  <h2>üí¨ Reviews</h2>

  @if (reviews != null && reviews.Any())
  {
    @foreach (var review in reviews)
    {
      <div class="review-card">
        <div class="review-author">
          User #@review.userId
        </div>

        <div class="review-content">
          @review.postContent
        </div>

        @if (review.containsSpoilers)
        {
          <div class="spoiler">‚ö† Contains spoilers</div>
        }

        <!-- COMMENTS -->
        @if (review.Comments != null)
        {
          foreach (var comment in review.Comments)
          {
            <div class="comment">
              <small>User #@comment.userId</small><br />
              @comment.postContent
            </div>
          }
        }

        <!-- COMMENT FORM -->
        @if (isAuthenticated)
        {
          <div class="form-box">
            <textarea placeholder="Write a comment..." id="comment-@review.postId"></textarea>

            <button class="btn" onclick="createComment(@review.postId)">
              Add Comment
            </button>
          </div>
        }

        <!-- DELETE REVIEW -->
        @if (isAuthenticated && review.userId.ToString() == userId)
        {
          <button class="btn danger" onclick="deleteReview(@review.postId)">
            Delete Review
          </button>
        }
      </div>
    }
  }
  else
  {
    <p>No reviews yet.</p>
  }

  <!-- CREATE REVIEW -->
  @if (isAuthenticated)
  {
    <div class="form-box">
      <h3>Write a Review</h3>
      <textarea id="reviewContent" placeholder="Share your thoughts..."></textarea>

      <label>
        <input type="checkbox" id="reviewSpoiler" /> Contains spoilers
      </label>

      <br />
      <button class="btn" onclick="createReview()">Submit Review</button>
    </div>
  }
  else
  {
    <p class="login-warning">
      You must <a href="/auth/login">login</a> to write a review.
    </p>
  }
</section>

<script>
  const userId = '@userId';
  const bookId = '@book.bookId';

  async function createReview() {
    const content = document.getElementById('reviewContent').value;
    const containsSpoilers = document.getElementById('reviewSpoiler').checked;

    await fetch('/books/create-review', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        userId: userId,
        bookId: bookId,
        content: content,
        containsSpoilers: containsSpoilers
      })
    });

    location.reload();
  }

  async function createComment(reviewId) {
    const content = document.getElementById(`comment-${reviewId}`).value;

    await fetch('/books/create-comment', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        userId: userId,
        reviewId: reviewId,
        content: content,
        containsSpoilers: false
      })
    });

    location.reload();
  }

  async function deleteReview(reviewId) {
    if (!confirm('Delete this review?')) return;

    await fetch('/books/delete-review', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        userId: userId,
        reviewId: reviewId
      })
    });

    location.reload();
  }
</script>