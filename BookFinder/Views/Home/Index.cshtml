@{
    ViewData["Title"] = "Home";
    var topTenBooks = ViewBag.TopTenBooks as IEnumerable<dynamic>;
    var books = ViewBag.Books as IEnumerable<dynamic>;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BookFinder</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 60px 0;
            margin-bottom: 40px;
        }

        .book-card {
            transition: transform 0.3s, box-shadow 0.3s;
            height: 100%;
        }

        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .book-cover {
            height: 300px;
            object-fit: cover;
            width: 100%;
        }

        .rating-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(0, 0, 0, 0.7);
            color: gold;
            padding: 5px 10px;
            border-radius: 20px;
            font-weight: bold;
        }
    </style>
</head>

<body>
    @await Html.PartialAsync("~/Views/Shared/Navbar.cshtml")

    <div class="hero-section">
        <div class="container text-center">
            <h1 class="display-3 fw-bold mb-3">
                <i class="bi bi-book-half"></i> Welcome to BookFinder
            </h1>
            <p class="lead mb-4">Discover, track, and review your favorite books</p>
            <a asp-controller="Books" asp-action="Index" class="btn btn-light btn-lg">
                <i class="bi bi-search"></i> Explore Books
            </a>
        </div>
    </div>

    <div class="container mb-5">
        @if (topTenBooks != null && topTenBooks.Any())
        {
            <div class="mb-5">
                <h2 class="mb-4">
                    <i class="bi bi-star-fill text-warning"></i> Top Rated Books
                </h2>
                <div class="row g-4">
                    @foreach (var book in topTenBooks)
                    {
                        <div class="col-md-6 col-lg-3">
                            <div class="card book-card">
                                <div class="position-relative">
                                    <img src="@book.ImageURL" class="card-img-top book-cover" alt="@book.Title">
                                    @if (book.Score != null)
                                    {
                                        <span class="rating-badge">
                                            <i class="bi bi-star-fill"></i> @string.Format("{0:0.0}", book.Score)
                                        </span>
                                    }
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title text-truncate" title="@book.Title">@book.Title</h5>
                                    <p class="card-text text-muted mb-1">
                                        <small><i class="bi bi-person"></i> @book.Author</small>
                                    </p>
                                    <p class="card-text text-muted">
                                        <small><i class="bi bi-building"></i> @book.Publisher</small>
                                    </p>
                                    @if (!string.IsNullOrEmpty(book.Genre))
                                    {
                                        <p class="card-text">
                                            <small class="text-primary">
                                                <i class="bi bi-tags"></i> @book.Genre
                                            </small>
                                        </p>
                                    }
                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.ID"
                                        class="btn btn-primary btn-sm w-100">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        @if (books != null && books.Any())
        {
            <div class="mt-5">
                <h2 class="mb-4">
                    <i class="bi bi-collection"></i> All Books
                </h2>
                <div class="row g-4">
                    @foreach (var book in books.Take(12))
                    {
                        <div class="col-md-6 col-lg-3">
                            <div class="card book-card">
                                <div class="position-relative">
                                    <img src="@book.imageURL" class="card-img-top book-cover" alt="@book.title">
                                    @if (book.averageScore != null)
                                    {
                                        <span class="rating-badge">
                                            <i class="bi bi-star-fill"></i> @string.Format("{0:0.0}", book.averageScore)
                                        </span>
                                    }
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title text-truncate" title="@book.title">@book.title</h5>
                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.bookId"
                                        class="btn btn-outline-primary btn-sm w-100">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="text-center mt-4">
                    <a asp-controller="Books" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-arrow-right-circle"></i> View All Books
                    </a>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>