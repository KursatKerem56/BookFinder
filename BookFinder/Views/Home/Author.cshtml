@{
  ViewData["Title"] = "Author";
  var author = ViewBag.Author;
  var writtenBooks = ViewBag.WrittenBooks as IEnumerable<dynamic>;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@author?.name - BookFinder</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    .author-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 60px 0;
      margin-bottom: 40px;
    }

    .bio-section {
      background: #f8f9fa;
      padding: 30px;
      border-radius: 10px;
      margin-bottom: 40px;
    }

    .book-card {
      transition: transform 0.3s;
      height: 100%;
    }

    .book-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
  </style>
</head>

<body>
  @if (author != null)
  {
    <div class="author-header">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-2 text-center mb-3 mb-md-0">
            <i class="bi bi-person-circle display-1"></i>
          </div>
          <div class="col-md-10">
            <h1 class="display-4 fw-bold">@author.name</h1>
            <p class="lead mb-0">
              <i class="bi bi-book"></i>
              @(writtenBooks?.Count() ?? 0) Books Published
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="container mb-5">
      <div class="bio-section">
        <h3 class="mb-3">
          <i class="bi bi-info-circle"></i> Biography
        </h3>
        <p class="lead">@(author.bio ?? "Biography not available.")</p>
      </div>

      @if (writtenBooks != null && writtenBooks.Any())
      {
        <h3 class="mb-4">
          <i class="bi bi-collection-fill"></i> Books by @author.name
        </h3>
        <div class="table-responsive">
          <table class="table table-hover table-striped">
            <thead class="table-dark">
              <tr>
                <th>Title</th>
                <th>Publisher</th>
                <th>Publication Date</th>
                <th>Pages</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var book in writtenBooks)
              {
                <tr>
                  <td class="fw-bold">@book.Title</td>
                  <td>
                    <i class="bi bi-building text-muted"></i> @book.Publisher
                  </td>
                  <td>
                    <i class="bi bi-calendar text-muted"></i>
                    @((book.PublicationDate)?.ToString() ?? "N/A")
                  </td>
                  <td>
                    <i class="bi bi-file-text text-muted"></i>
                    @(book.PageCount ?? 0) pages
                  </td>
                  <td>
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                      <i class="bi bi-eye"></i> View
                    </a>
                  </td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      }
      else
      {
        <div class="alert alert-info">
          <i class="bi bi-info-circle"></i> No books found for this author.
        </div>
      }

      <div class="mt-4">
        <a asp-controller="Home" asp-action="Index">
          <i class="bi bi-arrow-left"></i> Back to Home
        </a>
      </div>
    </div>
  }
  else
  {
    <div class="container mt-5">
      <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> Author not found.
      </div>
      <a asp-controller="Home" asp-action="Index">
        <i class="bi bi-house"></i> Go to Home
      </a>
    </div>
  }

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>