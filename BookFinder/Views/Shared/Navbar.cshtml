@using System.Security.Claims
@{
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    var username = User?.FindFirst(ClaimTypes.Name)?.Value;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BookFinder</title>

    <style>
        :root {
            --orange-main: #f97316;
            --orange-dark: #ea580c;
            --bg-dark: #0f172a;
            --bg-light: #111827;
            --text-main: #f9fafb;
            --text-muted: #9ca3af;
        }

        body {
            margin: 0;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: #0b0f19;
            color: var(--text-main);
        }

        /* NAVBAR */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 14px 32px;
            background: linear-gradient(135deg, #0f172a, #020617);
            border-bottom: 1px solid rgba(249, 115, 22, 0.35);
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.45);
        }

        .nav-left a {
            font-size: 22px;
            font-weight: 800;
            letter-spacing: 0.4px;
            color: var(--orange-main);
            text-decoration: none;
        }

        .nav-left a:hover {
            color: #fdba74;
        }

        .nav-right {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .username {
            font-size: 14px;
            color: var(--text-muted);
        }

        .nav-btn {
            padding: 8px 16px;
            border-radius: 999px;
            border: none;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.25s ease;
        }

        .login-btn {
            background: linear-gradient(135deg, var(--orange-main), var(--orange-dark));
            color: white;
            box-shadow: 0 6px 20px rgba(249, 115, 22, 0.5);
        }

        .login-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 10px 26px rgba(249, 115, 22, 0.6);
        }

        .logout-btn {
            background: transparent;
            color: #fca5a5;
            border: 1px solid rgba(248, 113, 113, 0.6);
        }

        .logout-btn:hover {
            background: rgba(248, 113, 113, 0.15);
        }

        /* PAGE CONTENT */
        .page-content {
            padding: 32px;
        }

        @@media (max-width: 640px) {
            .navbar {
                padding: 12px 18px;
            }
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar">
        <div class="nav-left">
            <a href="/">BookFinder</a>
        </div>

        <div class="nav-right">
            @if (isAuthenticated)
            {
                <span class="username">ðŸ‘¤ @username</span>
                <button class="nav-btn logout-btn" onclick="logout()">Logout</button>
            }
            else
            {
                <a href="/auth/login">
                    <button class="nav-btn login-btn">Login</button>
                </a>
            }
        </div>
    </nav>

    <!-- PAGE CONTENT -->
    <main class="page-content">
        @RenderBody()
    </main>

    <script>
        async function logout() {
            try {
                const res = await fetch('/auth/logout', {
                    method: 'POST',
                    credentials: 'include'
                });

                if (res.ok) {
                    window.location.href = '/auth/login';
                }
            } catch (err) {
                console.error('Logout failed', err);
            }
        }
    </script>

</body>

</html>