@{
    ViewData["Title"] = "Authentication";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BookFinder</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h1 class="display-4 mb-4">
                    <i class="bi bi-book-half text-primary"></i> Welcome to BookFinder
                </h1>
                <p class="lead mb-5">Discover, track, and review your favorite books</p>

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <i class="bi bi-box-arrow-in-right display-1 text-primary mb-3"></i>
                                <h3 class="card-title">Login</h3>
                                <p class="card-text mb-4">Already have an account? Sign in to access your library and
                                    reviews.</p>
                                <a href="/auth/login" class="btn btn-primary btn-lg mt-auto">
                                    <i class="bi bi-arrow-right-circle"></i> Go to Login
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <i class="bi bi-person-plus display-1 text-success mb-3"></i>
                                <h3 class="card-title">Register</h3>
                                <p class="card-text mb-4">New here? Create an account to start building your book
                                    collection.</p>
                                <a href="/auth/register" class="btn btn-success btn-lg mt-auto">
                                    <i class="bi bi-arrow-right-circle"></i> Go to Register
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>